
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Http;

<div class="col s6 m6" style="margin-top:70px">
    <p style="font-family: 'Roboto Condensed', sans-serif">Hoşgeldiniz,<b> @Context.Session.GetString("Kullanıcı_Adı")</b></p>
</div>

<div class="col s12" style="margin-top:30px">
    <ul class="collapsible">
        <li>
            <a href="@Url.Action("YeniIsKaydi", "Anasayfa")">
