                    <i class="material-icons">chevron_right</i>
                    <b>Devam Eden İşler</b>
                    <span class="badge"><b style="color:red">1</b></span>
                </div>
            </a>
        </li>
        <li>
            <a href="@Url.Action("BeklemeListe", "Anasayfa")">
                <div class="collapsible-header">
                    <i class="material-icons">chevron_right</i>
                    <b>Beklemede Olan İşler</b>
                    <span class="badge"><b style="color:red">4</b></span>
                </div>
            </a>
